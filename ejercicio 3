import tkinter as tk

def main():
    ventana = tk.Tk()
    ventana.title("Ejercicio 3")
    ventana.geometry("700x700")


    def accionSaludar():
        titulo = tk.Label(ventana, text="saludar")
        titulo.pack(pady=10)


    nombre = tk.Entry()
    nombre.pack()
    
    etiqueta= tk.Label(text="hola [nombre], te saluda mateo")
    etiqueta.pack()


    ventana.mainloop()
if __name__=="__main__":
    main()
